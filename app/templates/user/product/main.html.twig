{% extends "_base.html.twig" %}
{% block content %}
<div class="row bg-dark">
  <div class="col-xl-12 col-md-12 col-sm-12 col-xs-12">
    {% use "user/components/top_nav_bar.html.twig" %}
    {% block top_nav_bar %}
    {{ parent() }}
    {% endblock %}
  </div>
</div>

<div class="container-fluid px-3 mx-0">
  <div class="row">
    <div class="col-xl-3 col-md-3 col-sm-12 col-xs-12 mt-3">
      {% use "user/components/side_bar.html.twig" %}
      {% block side_bar %}
      {{ parent() }}
      {% endblock %}
    </div>
    <div class="col-xl-9 col-md-9 col-sm-12 col-xs-12 mt-3">
      {% use "user/product/components/product_card.html.twig" %}
      {% block product_card %}
      {{ parent() }}
      {% endblock %}
    </div>
  </div>
</div>

<div class="container-fluid px-3 mx-0 mt-5">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      {% use "user/product/components/product_body_tab_menu.html.twig" %}
      {% block product_body_tab_menu %}
      {{ parent() }}
      {% endblock %}
      <div class="tab-content" id="tab-content">
        {% use "user/product/components/product_body_description.html.twig" %}
        {% block product_body_description %}
        {{ parent() }}
        {% endblock %}

        {% use "user/product/components/product_body_characteristics.html.twig" %}
        {% block product_body_characteristics %}
        {{ parent() }}
        {% endblock %}

        {% use "user/product/components/product_body_delivery.html.twig" %}
        {% block product_body_delivery %}
        {{ parent() }}
        {% endblock %}

        {% use "user/product/components/product_body_reviews.html.twig" %}
        {% block product_body_reviews %}
        {{ parent() }}
        {% endblock %}
      </div>
    </div>
  </div>
</div>

<div class="container-fluid px-3 mx-0">
  <div class="row p-3">
    <div class="col-xs-12 col-sm-12 col-md-12 col-xl-8">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 h-100">
          {% use "user/components/recommendations_block.html.twig" %}
          {% block recommendations %}
          {{ parent() }}
          {% endblock %}
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-xl-4">
      <div class="container rounded">
        <div class="row row-cols-1 row-cols-md-1 row-cols-xl-1 h-100">
          {% use "user/components/discount_block.html.twig" %}
          {% block discount %}
          {{ parent() }}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}